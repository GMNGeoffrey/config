# See https://specifications.freedesktop.org/basedir-spec/latest/. These are
# basically all the defaults, but some programs look specifically to see if
# these values are set and it's better to be explicit anyways.
export XDG_CONFIG_HOME="${HOME}/.config"
export XDG_CACHE_HOME="${HOME}/.cache"
export XDG_DATA_HOME="${HOME}/.local/share"
export XDG_STATE_HOME="${HOME}/.local/state"
